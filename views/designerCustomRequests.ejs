<h1 class="text-2xl font-bold mb-4">Custom Requests</h1>
<a href="/designer/dashboard" class="text-blue-600 hover:underline mb-4 inline-block">&larr; Back to Dashboard</a>

<!-- Form to submit a new custom request -->
<form action="/designer/custom-requests" method="POST" enctype="multipart/form-data" class="max-w-md mx-auto bg-white p-6 rounded shadow mb-8">
  <div class="mb-4">
    <label for="description" class="block font-medium mb-1">Description</label>
    <textarea id="description" name="description" class="w-full border p-2 rounded" required></textarea>
  </div>
  <div class="mb-4">
    <label for="budget" class="block font-medium mb-1">Budget</label>
    <input type="number" id="budget" name="budget" class="w-full border p-2 rounded" min="0" step="0.01">
  </div>
  <div class="mb-4">
    <label for="deadline" class="block font-medium mb-1">Deadline</label>
    <input type="date" id="deadline" name="deadline" class="w-full border p-2 rounded">
  </div>
  <div class="mb-4">
    <label for="image" class="block font-medium mb-1">Reference Image (optional)</label>
    <input type="file" id="image" name="image" class="w-full border p-2 rounded" accept="image/*">
  </div>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Submit Custom Request</button>
</form>

<!-- List of custom requests -->
<h2 class="text-xl font-semibold mb-2">Your Custom Requests</h2>
<table class="min-w-full bg-white border rounded shadow">
  <thead>
    <tr>
      <th class="py-2 px-4 border-b">User</th>
      <th class="py-2 px-4 border-b">Description</th>
      <th class="py-2 px-4 border-b">Budget</th>
      <th class="py-2 px-4 border-b">Deadline</th>
      <th class="py-2 px-4 border-b">Image</th>
      <th class="py-2 px-4 border-b">Requested At</th>
    </tr>
  </thead>
  <tbody>
    <% if (customRequests.length === 0) { %>
      <tr><td colspan="6" class="text-center py-4">No custom requests found.</td></tr>
    <% } else { %>
      <% customRequests.forEach(function(request) { %>
        <tr>
          <td class="py-2 px-4 border-b"><%= request.userId && request.userId.name ? request.userId.name : 'User' %></td>
          <td class="py-2 px-4 border-b"><%= request.description %></td>
          <td class="py-2 px-4 border-b"><%= request.budget ? 'â‚¹' + request.budget : '-' %></td>
          <td class="py-2 px-4 border-b"><%= request.deadline ? request.deadline.toLocaleDateString() : '-' %></td>
          <td class="py-2 px-4 border-b">
            <% if (request.image) { %>
              <img src="<%= request.image %>" alt="Reference" class="h-12 w-12 object-cover rounded" />
            <% } else { %>
              -
            <% } %>
          </td>
          <td class="py-2 px-4 border-b"><%= request.createdAt ? request.createdAt.toLocaleDateString() : '-' %></td>
        </tr>
      <% }); %>
    <% } %>
  </tbody>
</table> 