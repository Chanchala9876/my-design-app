<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Explore Categories | DesignHub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">

  <!-- Navbar -->
  <nav class="bg-black text-white px-6 py-4 flex justify-between items-center shadow-lg">
    <a href="/" class="text-2xl font-bold">DesignHub</a>
    <div class="space-x-4">
      <a href="/" class="hover:underline">Home</a>
      <a href="/user/profile" class="hover:underline">My Profile</a>
      <a href="/logout" class="hover:underline">Logout</a>
    </div>
  </nav>

  <!-- Hero Header -->
  <header class="text-center py-16 bg-gradient-to-r from-purple-800 to-red-500 text-white">
    <h1 class="text-4xl font-bold mb-2">Discover Unique Creations</h1>
    <p class="text-lg">Shop from student designers across various categories</p>
  </header>

  <!-- Category Grid -->
  <section class="py-12 px-6 md:px-20">
    <h2 class="text-3xl font-semibold mb-8 text-center">Shop by Category</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">

      <% categories.forEach(cat => { %>
        <a href="/stores/<%= cat.name.toLowerCase().replace(/\s+/g, '-') %>" class="block bg-white rounded-lg shadow-lg hover:shadow-2xl transition transform hover:scale-105 overflow-hidden">
          <img src="<%= cat.image %>" alt="<%= cat.name %>" 
     class="w-full h-48 object-cover block" loading="lazy">

          <div class="p-4">
            <h3 class="text-xl font-semibold text-center"><%= cat.name %></h3>
          </div>
        </a>
      <% }) %>

    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black text-gray-400 text-center py-4">
    &copy; <%= new Date().getFullYear() %> DesignHub. All rights reserved.
  </footer>

</body>
</html>
